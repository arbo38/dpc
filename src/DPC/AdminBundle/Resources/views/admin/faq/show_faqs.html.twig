{% extends "DPCAdminBundle::admin_layout.html.twig" %}

{% block admin_content %}

	<div class="row">
		<div class="col-md-12">
			<div class="panel">
				<header class="panel-heading">
					<h2 class="panel-title">{{ title|upper }}</h2>
				</header>
				<div class="panel-body">
					<table class="table table-hover">
						<thead>
							<tr>
								<th>ID</th>
								<th>Question</th>
								<th>Thème</th>
								<th>Status</th>
							</tr>
						</thead>
						<tbody>
							{% for faq in listFaqs %}
								<tr>
									<th scope="row">
										<a href="{{ path('dpc_admin_edit_faq', {'id': faq.id}) }}">
											{{ faq.id }}
										</a>
									</th>
									<td>{{ faq.title }}</td>
									<td>{{ faq.theme.title }}</td>
									<td>
										{% if faq.published %}
											publiée
										{% else %}
											brouillon
										{% endif %}
									</td>
								</tr>

							{% endfor %}
						</tbody>
					</table>
				</div>
			</div>
		</div><!--col end-->
	</div><!--row end-->
{% endblock %}

