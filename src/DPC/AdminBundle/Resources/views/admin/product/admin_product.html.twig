{% extends "DPCAdminBundle::admin_layout.html.twig" %}

{% block admin_content %}
    <aside id="hoe-left-panel" hoe-position-type="absolute">
      <ul class="nav panel-list">
          {{ include('@DPCAdminBundle/Resources/views/components/menus/closed/home_page.html.twig') }}
          {{ include('@DPCAdminBundle/Resources/views/components/menus/closed/contact_info.html.twig') }}
          {{ include('@DPCAdminBundle/Resources/views/components/menus/opened/product.html.twig') }}
          {{ include('@DPCAdminBundle/Resources/views/components/menus/closed/brand.html.twig') }}
          {{ include('@DPCAdminBundle/Resources/views/components/menus/closed/category.html.twig') }}
          {{ include('@DPCAdminBundle/Resources/views/components/menus/closed/faq.html.twig') }}
          {{ include('@DPCAdminBundle/Resources/views/components/menus/closed/service.html.twig') }}
      </ul>  
    </aside><!--aside left menu end-->

    <section id="main-content">
        {{ include('@DPCAdminBundle/Resources/views/components/flash_message.html.twig') }}
        <div class="col-md-8 col-md-offset-2">
            <div class="panel">
                <header class="panel-heading">
                    <h2>{{ title|upper }}</h2>
                </header> <!-- header.panel-heading -->
                <div class="panel-body">
                    {{ form_start(form, {'attr': {'class': 'form-horizontal', 'role': 'form'}}) }}
                    {{ form_errors(form) }}
                    <div class="form-group">
                        <div class="col-lg-12">
                            {{ form_errors(form.title) }}   
                        </div> <!-- div.col-lg-12 -->
                        {{ form_label(form.title, "Nom:", {'label_attr': {'class': 'col-lg-3 control-label'}}) }}
                        <div class="col-lg-9">
                            {{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-12">
                            {{ form_errors(form.shortDescription) }}  
                        </div> <!-- div.col-lg-12 -->
                        {{ form_label(form.shortDescription, "Description courte:", {'label_attr': {'class': 'col-lg-3 control-label'}}) }}
                        <div class="col-lg-9">
                            {{ form_widget(form.shortDescription, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-12">
                            {{ form_errors(form.description) }}  
                        </div> <!-- div.col-lg-12 -->
                        {{ form_label(form.description, "Description:", {'label_attr': {'class': 'col-lg-3 control-label'}}) }}
                        <div class="col-lg-9">
                            {{ form_widget(form.description, {'attr': {'class': 'form-control tinyMCE'}}) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-12">
                            {{ form_errors(form.price) }}   
                        </div> <!-- div.col-lg-12 -->
                        {{ form_label(form.price, "Prix:", {'label_attr': {'class': 'col-lg-3 control-label'}}) }}
                        <div class="col-lg-9">
                            {{ form_widget(form.price, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-12">
                            {{ form_errors(form.discount) }}  
                        </div> <!-- div.col-lg-12 -->
                        {{ form_label(form.discount, "Réduction (%):", {'label_attr': {'class': 'col-lg-3 control-label'}}) }}
                        <div class="col-lg-9">
                            {{ form_widget(form.discount, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-12">
                            {{ form_errors(form.occasion) }}   
                        </div> <!-- div.col-lg-12 -->
                        {{ form_label(form.occasion, "Occasion:", {'label_attr': {'class': 'col-lg-3 control-label'}}) }}
                        <div class="col-lg-1">
                            {{ form_widget(form.occasion, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-12">
                            {{ form_errors(form.promo) }}   
                        </div> <!-- div.col-lg-12 -->
                        {{ form_label(form.promo, "Promotion:", {'label_attr': {'class': 'col-lg-3 control-label'}}) }}
                        <div class="col-lg-1">
                            {{ form_widget(form.promo, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-12">
                            {{ form_errors(form.warranty) }}  
                        </div> <!-- div.col-lg-12 -->
                        {{ form_label(form.warranty, "Garantie (en mois):", {'label_attr': {'class': 'col-lg-3 control-label'}}) }}
                        <div class="col-lg-9">
                            {{ form_widget(form.warranty, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>


                    <div class="form-group">
                        <div class="col-lg-12">
                            {{ form_errors(form.categories) }}  
                        </div> <!-- div.col-lg-12 -->
                        {{ form_label(form.categories, "Catégorie:", {'label_attr': {'class': 'col-lg-3 control-label'}}) }}
                        <div class="col-lg-9">
                            {{ form_widget(form.categories, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-12">
                            {{ form_errors(form.brand) }}
                        </div> <!-- div.col-lg-12 -->
                        {{ form_label(form.brand, "Marque:", {'label_attr': {'class': 'col-lg-3 control-label'}}) }}
                        <div class="col-lg-9">
                            {{ form_widget(form.brand, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>
                    <div>
                        <div id="images_container" data-prototype="{{ include('@DPCAdminBundle/Resources/views/components/images-form/images_prototype.html.twig') }}" >
                            {% for image in form.images %}
                                <div class="well" >
                                    <div class='form-group image-form'>
                                        <div style='padding-left:30px'>
                                            {{ form_label(image, 'Image N°' ~ loop.index,{'label_attr': {'class': 'control-label'}}) }}
                                        </div>
                                        <div class='form-group'>
                                            <div class="col-lg-12">
                                                {{ form_errors(image.title) }}
                                            </div> <!-- div.col-lg-12 -->
                                            {{ form_label(image.title, 'Titre image:', {'label_attr': {'class': 'col-lg-3 control-label'}}) }}
                                            <div class='col-lg-9'>
                                                {{ form_widget(image.title, {'attr': {'class': 'form-control'}}) }}
                                            </div>
                                        </div>
                                        <div class='form-group'>
                                            <div class="col-lg-12">
                                                {{ form_errors(image.alt) }}
                                            </div> <!-- div.col-lg-12 -->
                                            {{ form_label(image.alt, 'Texte alternatif:', {'label_attr': {'class': 'col-lg-3 control-label'}}) }}
                                            <div class='col-lg-9'>
                                                {{ form_widget(image.alt, {'attr': {'class': 'form-control'}})}}
                                            </div>
                                        </div>
                                        <div class='form-group'>
                                            <div class="col-lg-12">
                                                {{ form_errors(image.imageFile) }}
                                            </div> <!-- div.col-lg-12 -->
                                            {{ form_label(image.imageFile, 'Fichier:', {'label_attr': {'class': 'col-lg-3 control-label'}}) }}
                                            <div class='col-lg-4'>
                                                {{ form_widget(image.imageFile, {'attr': {'class': ''}}) }}
                                            </div>
                                            <div class='col-lg-2'>
                                                <a href="#" class="thumbnail">
                                                    <img src="{{ vich_uploader_asset(product.images[loop.index0], 'imageFile') }}" alt="{{ product.images[loop.index0].alt }}">
                                                    <div class="caption">
                                                        Image actuelle
                                                    </div> <!-- div.caption -->
                                                </a>
                                            </div>
                                        </div>
                                        <div class='delete-button' style='padding-left:30px' ></div>
                                    </div>
                                </div> <!-- div.well -->
                            {% endfor %}
                        </div><!-- Section 3 container  -->
                        <a href="#" id="add_image" class="btn btn-sm btn-primary rounded">Ajouter un élément</a>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-offset-2 col-lg-10">
                            <div class="pull-right">
                                <button class="btn btn-success rounded" type="submit">
                                    {% if action == 'add' %}
                                    Ajouter
                                    {% else %}
                                      Editer
                                    {% endif %}
                                </button>
                            </div>
                        </div>
                    </div>
                    {{ form_rest(form) }}
                    {{ form_end(form) }}
                </div> <!-- div.panel-body -->
            </div> <!-- div.panel -->
        </div> <!-- div.col-md-6 -->

        {% if deleteForm is defined %}
            <div class="col-md-8 col-md-offset-2">
                <div class="panel">
                    <div class="panel-body">
                        <header class="panel-heading">
                              <h2>SUPPRIMER LE PRODUIT</h2>
                        </header> <!-- header.panel-heading -->
                        <div class="panel-body">
                            {{ form_start(deleteForm, {'attr': {'class': 'form-horizontal', 'role': 'form'}}) }}
                            {{ form_errors(deleteForm) }}
                            {{ form_label(deleteForm.delete, "Supprimer le produit:", {'label_attr': {'class': 'col-lg-3 control-label'}}) }}
                            {{ form_errors(deleteForm.delete) }}
                            <div class="col-lg-3">
                                {{ form_widget(deleteForm.delete, {'attr': {'class': 'form-control'}}) }}
                            </div>
                            <div class="form-group">
                                <div class="col-lg-offset-2 col-lg-10">
                                    <div class="pull-right">
                                        <button class="btn btn-danger rounded" type="submit">Supprimer</button>
                                    </div>
                                </div>
                            </div>
                            {{ form_rest(deleteForm) }}
                            {{ form_end(deleteForm) }}
                        </div> <!-- div.panel-body -->
                    </div><!-- div.panel-body -->
                </div> <!-- div.panel -->
            </div> <!-- div.col-md-6 -->
        {% endif %}
    </section><!--end main content-->
{% endblock %}

{% block javascript %}
    {{ parent() }}
    <script type="text/javascript">
        {{ include('@DPCAdminBundle/Resources/views/components/images-form/images.js') }}
    </script>
{% endblock %}