{% extends "DPCStoreBundle::layout.html.twig" %}

{% block title %}
  Promotions - {{ parent() }}
{% endblock %}

{% block dpcstore_body %}
<div class="row"></div> <!-- div.row -->
  <h3>Promo</h3>

  <p>
        <a href="{{ path('dpc_store_promo', {'id': promo.id}) }}">
          {{ promo.title }}
        </a>
        le {{ promo.date|date('d/m/Y') }}
        <p>
          {{ promo.description }}
        </p>
  </p>
</div>

{% endblock %}