{% if productSelection is not null %}
	{% for product in productSelection %}
		<li>
			<a class="thumbnail" href="{{ path('dpc_store_product', {'id': product.id }) }}">
				<img src="{{ vich_uploader_asset(product.images[0], 'imageFile') }}" class="" alt="{{ product.images[0].alt }}">
			</a>
		</li>
	{% endfor %}
{% else %}
	En construction
{% endif %}
